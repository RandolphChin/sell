/* CSS预处理器中定义一个函数 */
border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-bottom: 1px solid $color
    content: ' '
  &:before
    display: block
    position: absolute
    left: 0
    top: 0
    width: 100%
    border-bottom: 1px solid $color
    content: ' '
/* 需要注意 定义另一个函数，函数名必须顶格写, 默认格式化后不是顶格，如果不是顶格该函数无效 */
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
